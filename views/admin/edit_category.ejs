<section class="content-header">
    <h1>
        Dashboard
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-10 offset-1">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Category Detail</h3>
                </div>
                <form method="POST" action="/admin/categories/update" role="form" class="form-element" id="create-category">
                    <input type="hidden" name="id" value="<%= category.item.id %>">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Category's name..." value="<%= category.item.name %>">
                            <% if (typeof validate != 'undefined' && validate != '') { %>
                                <span class="help-block text-red"><%= validate[0].msg %></span>
                            <% } %>
                            <% if (typeof apiValidate != 'undefined' && apiValidate != '') { %>
                                <span class="help-block text-red"><%= apiValidate %></span>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" name="description" id="description" rows="5" placeholder="Category's description..."><%= category.item.description %></textarea>
                        </div>
                    </div>
                    <div class="box-footer text-right">
                        <button type="submit" class="btn btn-lg btn-warning">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<%- contentFor('appjs') %>
<script src="/javascripts/admin/create_category_validator.js" type="text/javascript"></script>
