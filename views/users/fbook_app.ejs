<section class="">
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-7 padding100 my-auto">
                    <div class="header-content mx-auto">
                        <h1 class="mb-5 text-white">Welcome to the best place to read book. Read, share and engage with great books!</h1>
                        <div class="space-25"></div>
                        <div class="badges">
                            <a class="badge-link" href="https://play.google.com/store/apps/details?id=com.framgia.book"><img src="/images/appimg/google-play-badge.svg" alt=""></a>
                            <a class="badge-link image-coming-soon" href="#"><img src="/images/appimg/app-store-badge.svg" alt=""></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 my-auto">
                    <div class="device-container">
                        <div class="device-mockup portrait white">
                            <div class="device">
                                <div class="screen">
                                    <img src="/images/appimg/demo-screen-1.jpg" class="img-fluid" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section class="features padding100" id="features">
        <div class="container">
            <div class="section-heading text-center">
                <h2>Unlimited Features, Unlimited Fun</h2>
                <p class="text-muted">Check out what you can do with this app!</p>
                <hr>
            </div>
            <div class="row">
                <div class="col-lg-4 my-auto">
                    <div class="device-container">
                        <div class="device-mockup iphone6_plus portrait white">
                            <div class="device">
                                <div class="screen">
                                    <img src="/images/appimg/demo-screen-2.jpg" class="img-fluid" alt="">
                                </div>
                                <div class="button"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 my-auto">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="feature-item">
                                    <i class="icofont icofont-read-book"></i>
                                    <h3>Read</h3>
                                    <p class="text-muted">Borrow a book to read it!</p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="feature-item">
                                    <i class="icofont icofont-share"></i>
                                    <h3>Share</h3>
                                    <p class="text-muted">Show us your interesting books</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="feature-item">
                                    <i class="icofont icofont-unity-hand"></i>
                                    <h3>Communication</h3>
                                    <p class="text-muted">Pleases comment your reviews about a book. We can read it</p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="feature-item">
                                    <i class="icofont icofont-animal-woodpecker"></i>
                                    <h3>Connect</h3>
                                    <p class="text-muted">Don't forget to follow another user to see more books!
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>

